{
  "name": "craps",
  "version": "1.0.0",
  "description": "craps simulator",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "NODE_ENV=test tap test/*.test.ts --coverage-report=text-summary",
    "cov": "NODE_ENV=test tap test/*.test.ts  --coverage-report=html",
    "tap-file": "NODE_ENV=test tap test/*.test.ts  --output-file=results.tap",
    "fix": "standard --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "lint": "eslint \"**/*.{ts,js}\" --fix",
    "build": "tsc",
    "start": "node dist/hands.js",
    "dev": "node --loader ts-node/esm src/hands.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tphummel/node-craps.git"
  },
  "keywords": [
    "craps",
    "dice",
    "gambling"
  ],
  "author": "Tom Hummel <tohu@hey.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tphummel/node-craps/issues"
  },
  "homepage": "https://github.com/tphummel/node-craps#readme",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "standard": "^16.0.3",
    "tap": "^21.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1"
  }
}
